    "import tensorflow as tf\n",
    "\n",
    "def perplexity_metric(loss):\n",
    "    loss = tf.reduce_mean(loss)\n",
    "    perplexity = tf.exp(loss)\n",
    "    return {\"perplexity\": tf.metrics.mean(perplexity)}"
   ]
  }
